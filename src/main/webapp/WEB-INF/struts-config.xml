<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
        "http://jakarta.apache.org/struts/dtds/struts-config_1_3.dtd">

<struts-config>

    <form-beans>
        <form-bean name="newsForm" type="com.epam.forms.NewsForm"/>
    </form-beans>

    <action-mappings>
        <action path="/NewsAction"
                type="com.epam.action.news.NewsAction"
                parameter="action" name="newsForm" validate="false">
            <forward name="successList" path="/newsList.jsp"/>
            <forward name="successDeleteList" path="/NewsAction.do?action=list"/>
            <forward name="successDelete" path="/NewsAction.do?action=list"/>
            <forward name="successAdd" path="/addAndEditNews.jsp"/>
            <forward name="successView" path="/viewNews.jsp"/>
            <forward name="successEdit" path="/addAndEditNews.jsp"/>
            <forward name="successSave" path="/NewsAction.do?action=list"/>
        </action>
        <action path="/locale"
                type="com.epam.action.LanguageSelectAction"
                parameter="method">
            <forward name="success" path="/NewsAction.do?action=list"/>
        </action>
    </action-mappings>


    <message-resources
            parameter="news"/>
    <!-- Validator plugin -->
    <plug-in className="org.apache.struts.validator.ValidatorPlugIn">
        <set-property property="pathnames"
                      value="/WEB-INF/validator-rules.xml, /WEB-INF/validator-news.xml"/>

    </plug-in>
    <!-- Apache Tiles plugin -->
    <plug-in className="org.apache.struts.tiles.TilesPlugin">
        <set-property property="definitions-config"
                      value="/WEB-INF/tiles-defs.xml"/>
    </plug-in>
</struts-config>