<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
        "http://jakarta.apache.org/struts/dtds/struts-config_1_3.dtd">

<struts-config>

    <form-beans>
        <form-bean name="dynaNewsListDeleteForm"
                   type="org.apache.struts.action.DynaActionForm">
            <form-property name="selectedItems" type="java.lang.String[]"/>
        </form-bean>
        <form-bean name="newsForm" type="com.epam.forms.NewsForm"/>
    </form-beans>

    <action-mappings>
        <action path="/newsList" type="com.epam.action.news.NewsListAction">
            <forward name="success" path="/newsList.jsp"/>
        </action>
        <action path="/deleteNewsList"
                type="com.epam.action.news.NewsListDeleteAction"
                name="dynaNewsListDeleteForm">
            <forward name="success" path="/newsList.do"/>
        </action>
        <action path="/deleteNews"
                type="com.epam.action.news.NewsDeleteAction">
            <forward name="success" path="/newsList.do"/>
        </action>
        <action path="/addNews"
                type="com.epam.action.news.SaveNewsAction"
                name="newsForm" scope="request" input="/addAndEditNews.jsp">
            <forward name="successAdd" path="/addAndEditNews.jsp"/>
            <forward name="successEdit" path="/newsList.do" />
        </action>
        <action path="/editNews"
                type="com.epam.action.news.EditNewsAction"
                name="newsForm" scope="request" input="/addAndEditNews.jsp" validate="false">
            <forward name="success" path="/addAndEditNews.jsp"/>
        </action>
        <action path="/viewNews"
                type="com.epam.action.news.ViewNewsAction"
                name="newsForm" scope="request" input="/viewNews.jsp" validate="false">
            <forward name="success" path="/viewNews.jsp"/>
        </action>
        <action path="/locale"
                type="com.epam.action.LanguageSelectAction"
                parameter="method">
            <forward name="success" path="/newsList.do"/>
        </action>
    </action-mappings>


    <message-resources
            parameter="news" />
    <!-- Validator plugin -->
    <plug-in className="org.apache.struts.validator.ValidatorPlugIn" >
        <set-property property="pathnames"
                      value="/WEB-INF/validator-rules.xml, /WEB-INF/validator-news.xml"/>

    </plug-in>
    <!-- Spring Struts plugin -->
    <plug-in className="org.springframework.web.struts.ContextLoaderPlugIn">
        <set-property property="contextConfigLocation"
                      value="WEB-INF/application-context.xml"/>
    </plug-in>
</struts-config>